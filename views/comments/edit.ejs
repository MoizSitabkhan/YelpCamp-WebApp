<% include ../partials/header %>

    <div class="container">
        <h1 style="text-align: center; margin-top: 20px">Edit Comment</h1>
        <div style="width: 30%; margin:20px auto">
            <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <input class="btn btn-sm btn-primary btn-block"type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>