<% include ../partials/header %>
    <div class="container">
        <h1 style="text-align: center; margin-top: 20px">Add New Campground</h1>
        <div style="width: 30%; margin:20px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image Url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="description">
                </div>
                <div class="form-group">
                    <input class="btn btn-sm btn-primary btn-block"type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>